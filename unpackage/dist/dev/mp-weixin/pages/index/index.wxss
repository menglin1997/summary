.page-top {
  position: relative;
  background-color: #fff;
  overflow: hidden;
}
.page-top .mask-white {
    width: 100%;
    height: 750rpx;
    -webkit-transform: scaleY(0.026);
            transform: scaleY(0.026);
    position: absolute;
    bottom: -10rpx;
    background-color: #fff;
    z-index: 999;
    -webkit-transform-origin: bottom;
            transform-origin: bottom;
}
.page-top .screen-swiper {
    height: 400rpx;
    min-height: inherit;
}
.page-top .screen-swiper image {
      height: 400rpx;
}
.page-top .top-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 326rpx;
    width: 100%;
}
.page-top .swiper-wapper {
    padding: 0 32rpx;
}
/* // 横向滑动 start */
.news-nav {
  margin: 70rpx 32rpx 0;
  height: 112rpx;
  line-height: 112rpx;
}
.news-nav scroll-view {
    white-space: nowrap;
    width: 100%;
}
.news-nav scroll-view text {
      display: inline-block;
      width: 150rpx;
      height: 60rpx;
      text-align: center;
      font-size: 28rpx;
      color: #333333;
}
.news-nav scroll-view text:nth-child(1) {
        color: #083C9D;
        font-size: 32rpx;
        color: #333333;
}
/* // 横向滑动 end */
.adv-wapper {
  padding: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 104rpx;
  background-color: #fff;
}
.adv-wapper .lside {
    width: 78rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.adv-wapper .lside image {
      width: 38rpx;
      height: 34rpx;
}
.adv-wapper .rside {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    padding-left: 20rpx;
}
.adv-wapper .rside .swiper {
      height: 60rpx;
}
.adv-wapper .rside .swiper .adv-text {
        line-height: 60rpx;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
}
.mj-nav-wapper {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.mj-nav-wapper .mj-nav-content {
    -webkit-transition: all ease 0.3s;
    transition: all ease 0.3s;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}
.mj-nav-wapper .mj-nav-content-fixed {
    position: fixed;
    -webkit-transition: all ease 0.3s;
    transition: all ease 0.3s;
    left: 0;
    right: 0;
    top: calc(44px + 25px);
    z-index: 999;
    box-shadow: 0px 3px 20px rgba(153, 153, 153, 0.2);
}
.mj-nav-wapper .cu-item {
    font-size: 28rpx;
    -webkit-transition: all ease .3s;
    transition: all ease .3s;
    position: relative;
    color: #BFBFBF;
}
.mj-nav-wapper .cu-item .mj-img {
      width: 48rpx;
      height: 13rpx;
      position: absolute;
      left: 0;
      right: 0;
      bottom: 10rpx;
      margin: auto;
      opacity: 0;
      -webkit-transition: all ease .2s;
      transition: all ease .2s;
}
.mj-nav-wapper .cu-item.cur {
      font-size: 32rpx;
      font-weight: bold;
      border: 0;
}
.mj-nav-wapper .cu-item.cur image {
        opacity: 1;
}
.mj-nav-wapper .text-green {
    color: #333333;
}
.mews-swiper {
  height: calc(100vh - 44px - 25px - 100rpx);
}
.mews-swiper .news-list-scroll-view {
    height: calc(100vh - 44px - 25px - 100rpx);
}
.mews-swiper .news-list {
    padding: 20rpx 32rpx 0;
}
