.mews-swiper .news-list .news-item .lside .time {
          font-size: 22rpx;
          color: #bfbfbf;
}
.mews-swiper .news-list .news-item .lside .time image {
            width: 24rpx;
            height: 24rpx;
            margin: 0 10rpx 0 20rpx;
}
.mews-swiper .news-list .news-item .rside {
        width: 180rpx;
        height: 189rpx;
        background: #f7f7f7;
        opacity: 1;
        border-radius: 10rpx;
        position: relative;
}
.mews-swiper .news-list .news-item .rside .tag {
          position: absolute;
          left: 0;
          top: 0;
          border-top-left-radius: 10rpx;
          border-bottom-right-radius: 10rpx;
          font-size: 22rpx;
